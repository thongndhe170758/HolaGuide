@page "{category?}/{filter?}"
@model HolaGuide.Pages.Home.UserHomeModel
@{
}

<div class="w-100 bg-black" style="min-height: 10rem"></div>

<div class="container" style="padding: 1rem 0">
    <div class="row">
        <div class="col-3 bordered" style="background-color: white">
            <div class="w-100 fw-bold" style="font-size: 1.5rem; padding: 0.25rem">Khám Phá</div>
            <div class="w-100">
                <ul class="w-100">
                    @foreach (var cat in Model.Categories)
                    {
                        <li><a asp-page="/Home/UserHome" asp-route-category="@cat.Name">@cat.Name</a></li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-9 bordered">
            <div class="container-fluid bordered" style="background-color: #dddddd; padding: 0">
                <div class="col-4">
                    <ul class="inline-list w-100">
                        <li><a asp-page="/Home/UserHome">Mới nhất</a></li>
                        <li><a asp-page="/Home/UserHome">Gần Tôi</a></li>
                        <li><a asp-page="/Home/UserHome">Đã Lưu</a></li>
                    </ul>
                </div>
            </div>
            <div class="container-fluid bordered">
                <div class="row">
                    @foreach (var service in Model.Services)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="card h-100">
                                <img src="" class="card-img-top" style="height: 50%;" alt="Service Image">
                                <div class="card-body">
                                    <h5 class="card-title">@service.Name</h5>
                                    <p class="card-text">@service.Title</p>
                                    <p class="card-text">Price: @service.Price</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    ul{
        padding: 0;
    }
    li{
        list-style-type: none;
        padding: 0.5rem;
        font-weight: 400;
    }
    li:hover{
        background: #f7f7f7;
    }
    .bordered{
        border-radius: 0.25rem;
    }
    .inline-list{
        display: flex;
        padding: 0;
        justify-content: center;
    }
    .inline-list li{
        flex: 1;
        text-align: center;
    }
</style>
